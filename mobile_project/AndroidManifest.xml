    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
    <!-- <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" /> -->

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="de.canberk.uni.cd_aap.activities.LogInActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="de.canberk.uni.cd_aap.activities.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="de.canberk.uni.cd_aap.activities.SignUpActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="de.canberk.uni.cd_aap.activities.SaveUserActivity"
            android:label="@string/app_name" >
        </activity>
    </application>

</manifest>
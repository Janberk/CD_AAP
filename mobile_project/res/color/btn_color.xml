<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- default inactive -->
    <item android:state_enabled="false" android:state_focused="false" android:state_pressed="false" android:color="#6d6e71"/>    
    <!-- default active -->
    <item android:state_enabled="true" android:state_focused="false" android:state_pressed="false" android:color="#363659"/>
    
    <!-- button focused inactive -->
    <item android:state_enabled="false" android:state_focused="true" android:state_pressed="false" android:color="#6d6e71"/>    
    <!-- button focused inactive -->
    <item android:state_enabled="true" android:state_focused="true" android:state_pressed="false" android:color="#363659"/>
    
    <!-- button pressed -->
    <item android:state_enabled="true" android:state_focused="false" android:state_pressed="true" android:color="#eb1523"/>

</selector>
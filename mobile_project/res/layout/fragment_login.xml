<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2d2d2d"
        android:paddingBottom="@dimen/app_padding_8dp"
        android:paddingLeft="@dimen/app_padding_8dp"
        android:paddingRight="@dimen/app_padding_8dp"
        android:paddingTop="@dimen/app_padding_8dp" >

        <RelativeLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@layout/header_gradient"
            android:paddingBottom="@dimen/app_padding_8dp"
            android:paddingTop="@dimen/app_padding_8dp" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/app_margin"
                android:contentDescription="@string/logo"
                android:src="@drawable/ic_launcher" />

            <TextView
                android:id="@+id/tv_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:text="@string/app_name"
                android:textColor="#ede9ff"
                android:textSize="26sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true" >

            <TextView
                android:id="@+id/tv_signup_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:text="@string/sign_up_link"
                android:textColor="#ede9ff"
                android:textSize="14sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/footer"
            android:layout_below="@+id/header"
            android:paddingBottom="@dimen/app_padding_8dp"
            android:paddingLeft="@dimen/app_padding_8dp"
            android:paddingRight="@dimen/app_padding_8dp"
            android:paddingTop="@dimen/app_padding_8dp" >

            <EditText
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="30dp"
                android:hint="@string/email"
                android:inputType="textEmailAddress"
                android:textColor="#ede9ff" >

                <requestFocus />
            </EditText>

            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/et_email"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:textColor="#ede9ff" />

            <Button
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/et_password"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:background="#2c436f"
                android:text="@string/login"
                android:textColor="#ede9ff" />
        </RelativeLayout>
    </RelativeLayout>

</ScrollView>
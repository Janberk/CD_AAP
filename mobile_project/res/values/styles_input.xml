<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="inputStyle">
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">@dimen/ui_element_margin_TopBottom_8dp</item>
        <item name="android:layout_marginBottom">@dimen/ui_element_margin_TopBottom_8dp</item>
        <item name="android:layout_marginLeft">@dimen/ui_element_margin_LeftRight_16dp</item>
        <item name="android:layout_marginRight">@dimen/ui_element_margin_LeftRight_16dp</item>
    </style>

    <style name="inputStyle.inputTextStyle">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/input_color</item>
        <item name="android:textColorHint">#909090</item>
        <item name="android:paddingLeft">@dimen/ui_element_padding_8dp</item>
    </style>
    
    <style name="inputStyle.inputTextStyle.input">
        <item name="android:background">@drawable/input_shape</item>
    </style>

</resources>
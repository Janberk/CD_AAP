<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="editTextForm">
        <item name="android:layout_height">38dp</item>
        <item name="android:layout_width">256dp</item>
        <item name="android:layout_marginTop">@dimen/ui_element_margin_TopBottom_8dp</item>
        <item name="android:layout_marginBottom">@dimen/ui_element_margin_TopBottom_8dp</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="editTextForm.textStyle">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#000022</item>
        <item name="android:textColorHint">#6d6e71</item>
        <item name="android:paddingLeft">@dimen/ui_element_padding_8dp</item>
    </style>
    
    <style name="editTextForm.textStyle.input">
        <item name="android:background">@drawable/input_shape</item>
    </style>
    
    <style name="textViewForm">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#33b5e5</item>
        <item name="android:layout_marginTop">@dimen/ui_element_margin_TopBottom_8dp</item>
        <item name="android:layout_marginBottom">@dimen/ui_element_margin_TopBottom_8dp</item>
    </style>
    
    <style name="buttonForm">
        <item name="android:layout_height">38dp</item>
        <item name="android:layout_width">256dp</item>
        <item name="android:layout_marginTop">@dimen/ui_element_margin_TopBottom_8dp</item>
        <item name="android:layout_marginBottom">@dimen/ui_element_margin_TopBottom_8dp</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>
    
    <style name="buttonAdd">
        <item name="android:layout_height">38dp</item>
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_marginTop">@dimen/ui_element_margin_TopBottom_8dp</item>
        <item name="android:layout_marginBottom">@dimen/ui_element_margin_TopBottom_8dp</item>
    </style>

    <style name="buttonForm.textStyle">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#e0ffff</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="buttonForm.textStyle.big">
        <item name="android:background">@drawable/btn_shape</item>
    </style>
    
    <style name="buttonAdd.textStyle">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#e0ffff</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="buttonAdd.textStyle.small">
        <item name="android:background">@drawable/btn_small_shape</item>
    </style>

</resources>
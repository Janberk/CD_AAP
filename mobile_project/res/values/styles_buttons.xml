<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="btnStyle">
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">@dimen/ui_element_margin_TopBottom_8dp</item>
        <item name="android:layout_marginBottom">@dimen/ui_element_margin_TopBottom_8dp</item>
        <item name="android:layout_marginLeft">@dimen/ui_element_margin_LeftRight_16dp</item>
        <item name="android:layout_marginRight">@dimen/ui_element_margin_LeftRight_16dp</item>
    </style>

    <style name="btnStyle.btnTextStyle">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="btnStyle.btnTextStyle.btnBig">
        <item name="android:background">@drawable/btn_shape</item>
    </style>

</resources>